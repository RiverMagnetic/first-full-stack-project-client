{{#each items as |item|}} {{log item}}

<!-- Developers, why are we using data-id and not just id? -->
<h1 data-id="{{item.id}}">
    <small>Item: {{item.item_name}}</small>
</h1>

<ul data-id="{{item.id}}">
    <li>{{#if item.description}} {{item.description}} {{else}} No description provided {{/if}}
    </li>
    <li>
        <button type="submit">X</button>
    </li>
</ul>

{{/each}}